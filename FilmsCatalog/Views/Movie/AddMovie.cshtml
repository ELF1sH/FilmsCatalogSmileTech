@{
    ViewData["Title"] = "Movie catalog";
}

@model MovieCreateViewModel

<h2>Добавление фильма</h2>

<form asp-controller="Movie" asp-action="AddMovie" method="post" style="margin-top: 2em;" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-4 col-sm-6 col-12">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-sm-6 col-12">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-sm-6 col-12">
            <label asp-for="Year"></label>
            <input type="number" asp-for="Year" class="form-control" min="0">
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-sm-6 col-12">
            <label asp-for="Director"></label>
            <input asp-for="Director" class="form-control">
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4 col-sm-6 col-12">
            <label asp-for="Poster"></label>
            <input type="file" accept="image/*" asp-for="Poster" class="form-control">
            <span asp-validation-for="Poster" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="btn btn-outline-primary">Добавить</button>
    </div>
</form>